<!DOCTYPE html>
<html>
  <head>
    <title>TweetApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
    <header>
      <div class="header-logo">
        <% if @current_user %>
          <%= link_to("TweetApp", posts_path) %>
        <% else %>
          <%= link_to("TweetApp", root_path) %>
        <% end %>
      </div>
      <ul class="header-menus">
        <% if @current_user %>
          <li>
            <%= link_to(@current_user.name, user_path(@current_user)) %>
          </li>
          <li>
            <%= link_to("ツイートする", new_post_path) %>
          </li>
          <li>
            <%= link_to("ユーザーリスト", users_path) %>
          </li>
          <li>
            <%= link_to("ログアウト", logout_users_path, {method: :delete}) %>
          </li>
        <% else %>
          <li>
            <%= link_to("TweetAppとは", about_path) %>
          </li>
          <li>
            <%= link_to("新規登録", new_user_path) %>
          </li>
          <li>
            <%= link_to("ログイン", login_users_path) %>
          </li>
        <% end %>
      </ul>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
